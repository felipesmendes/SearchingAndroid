<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTxtAfastamento">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_below">@id/editText3</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:width">200dp</item>
    </style>

    <style name="EditTxtCerca">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_below">@id/webViewCerca</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="EditTxtAddItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="BtnRedondo">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/botao_redondo</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MainLogo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/searching_logo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextoLogin">
        <item name="android:layout_height">@dimen/alturaEditText</item>
        <item name="android:layout_width">@dimen/larguraEditText</item>
        <item name="android:background">@color/corFundoTextoLogin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/corTextoLogin</item>
        <item name="android:fontFamily">Verdana</item>
        <item name="android:layout_marginBottom">@dimen/distanciaEditText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextoLinkCadastro">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#0315e1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtnLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#5c5757</item>
    </style>

</resources>
